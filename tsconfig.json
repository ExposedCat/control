{
	"compilerOptions": {
		"module": "es2022",
		"preserveConstEnums": true,
		"esModuleInterop": true,
		"target": "ESNext",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"outDir": "build",
		"baseUrl": ".",
		"paths": {
			"*": ["node_modules/*"]
		}
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts"]
}
